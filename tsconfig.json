{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "module": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src", "@types"],
  "exclude": ["node_modules", "build"],
}
